var Save = function(index){
	if (typeof(index) != number) return;

	this.index = index;

	this.players = {};

	for(var i in ["p1", "p2"]){
		this.players[i].hero = "";
		this.players[i].controls = {};
	}
	
	this.heroes = {};

	for(var i in ["lucy", "barton"]){
		this.heroes[i].level = 0;
		this.heroes[i].exp = 0;

		this.heroes[i].mainStat = 0;
		this.heroes[i].endurance = 0;
		this.heroes[i].agility = 0;
	}

	this.stage = {
		key: "",

		checkpoint: 0
	}

	this.misc = {
		volume: {
			music: 1,
			sfx: 1
		},

		timePlayed: 0,
		newGamePlus: false
	};
}
